<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
           xmlns:sf="sap.ui.layout.form"
		controllerName="smax.empReg.view.Fourth_page" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Work Experience" id="idwork">
	<headerContent>
	      <Button text="Submit" type="Accept"/>
	      <Button text="Save" type="Emphasized"/>
	      <Button text="Exit" type="Reject"/>
	</headerContent>
		<content>
	          <sf:SimpleForm>
	          <sf:title>
	          <core:Title text="Current Emplyoer"/>
	          </sf:title>
	          <sf:content>
	             <Label text="Emplyoee Name"/>
	             <Input/>
	             <Label text="Designation"/>
	             <Input/>
	             <Label text="From"/>
	             <DatePicker/>
	             <Label text="Skills"/>
	             <TextArea/>
	          </sf:content>
	          </sf:SimpleForm>
	          
	          
	          <sf:SimpleForm>
	               <sf:title>
	                 <core:Title text="Previous Emplyoer"/>
	               </sf:title>
	               
	               <sf:content>
	               <Label text="Emplyoee Name"/>
	               <Input/>
	               <Label text="Designation"/>
	               <Input/>
	               <Label text="From"/>
	               <DatePicker/>
	               <Label text="To"/>
	               <DatePicker/>
	               <Label/>
	               <TextArea/>
	               </sf:content>
	               
	          </sf:SimpleForm>
	          
	          
		</content>
		<footer>
		   <Toolbar>
		        <Button text="Add More Experience"/>
		        <ToolbarSpacer/>
		        <Button text="Next" press="Tocontact"/>
		   </Toolbar>
		</footer>
	</Page>
</core:View>